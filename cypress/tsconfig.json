{
  "extends": "@template-monorepo/ts-config/tsconfig.base.json",
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "cypress",
      "node"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
  },
}