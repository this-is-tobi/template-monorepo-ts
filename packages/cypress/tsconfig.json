{
  "extends": "@template-monorepo-ts/ts-config/tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "es5",
      "dom"
    ],
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "cypress",
      "node"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./types",
    "./cypress.config.ts",
    "./vite.config.ts"
  ]
}
