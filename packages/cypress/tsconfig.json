{
  "extends": "@template-monorepo-ts/ts-config/tsconfig.base.json",
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "cypress.config.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "cypress",
      "node"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
  },
}