{
  "extends": [
    "@template-monorepo-ts/ts-config/tsconfig.base.json"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./types"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": false,
  }
}