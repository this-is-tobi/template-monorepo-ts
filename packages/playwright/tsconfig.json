{
  "extends": "@template-monorepo-ts/ts-config/tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "es5",
      "dom"
    ],
    "baseUrl": "./",
    "rootDir": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@playwright/test",
      "node"
    ]
  },
  "include": [
    "./**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./types",
    "./playwright.config.ts"
  ]
}
