{
  "name": "@template-monorepo-ts/api",
  "version": "1.0.0",
  "license": "ISC",
  "type": "module",
  "types": "types/index.d.ts",
  "workspaces": ["../../packages/*"],
  "scripts": {
    "build": "bun run build:clean; bun run compile; bun run build:app",
    "build:app": "bun build ./src/server.ts --minify --outdir ./dist --target bun",
    "build:binary": "bun build ./src/server.ts --compile --minify --outfile ./dist/bin",
    "build:clean": "rimraf ./dist ./types",
    "compile": "tspc -p ./tsconfig.json",
    "dev": "bun run --hot ./src/server.ts",
    "docker:build": "docker build --tag template-monorepo-ts/api --target prod .",
    "docker:run": "docker run --publish 8080:8080 --rm template-monorepo-ts/api",
    "format": "eslint ./src --ext .js,.cjs,.ts --fix",
    "lint": "eslint ./src --ext .js,.cjs,.ts",
    "start": "bun run ./dist/server.js",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:e2e-ci": "echo 'Check local changes for turbo cache...'"
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@template-monorepo-ts/shared": "workspace:*",
    "@ts-rest/core": "^3.33.0",
    "@ts-rest/fastify": "^3.33.0",
    "@ts-rest/open-api": "^3.33.0",
    "fastify": "^4.26.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@template-monorepo-ts/eslint-config-base": "workspace:*",
    "@template-monorepo-ts/ts-config": "workspace:*",
    "@template-monorepo-ts/test-utils": "workspace:*",
    "@types/bun": "^1.0.5",
    "@types/node": "^20.11.16",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.2.2",
    "pino-pretty": "^10.3.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.4.6",
    "vitest": "^1.2.2"
  }
}
