{
  "name": "api",
  "version": "1.0.0",
  "license": "ISC",
  "type": "module",
  "types": "types/index.d.ts",
  "workspaces": ["../../packages/*"],
  "scripts": {
    "build": "bun build ./src/server.ts --minify --outdir ./dist --target bun",
    "build:binary": "bun build ./src/server.ts --compile --minify --outfile ./dist/bin",
    "build:clean": "rimraf ./dist ./types",
    "dev": "bun run ./src/server.ts --watch",
    "docker:build": "docker build --tag template-monorepo-ts/api --target prod .",
    "docker:run": "docker run --publish 8080:8080 --rm template-monorepo-ts/api",
    "format": "eslint ./src --ext .js,.cjs,.ts --fix",
    "lint": "eslint ./src --ext .js,.cjs,.ts",
    "start": "bun run ./dist/server.js",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:e2e-ci": "echo 'Check local changes for turbo cache...'"
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.0.1",
    "fastify": "^4.25.2"
  },
  "devDependencies": {
    "@template-monorepo/eslint-config-base": "workspace:*",
    "@template-monorepo/ts-config": "workspace:*",
    "@template-monorepo/test-utils": "workspace:*",
    "@types/node": "^20.10.8",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.1.3",
    "pino-pretty": "^10.3.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.4.6",
    "vitest": "^1.1.3"
  }
}
