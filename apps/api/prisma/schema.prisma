datasource db {
  provider = "postgresql"
  url      = env("API__DB_URL")
}

generator client {
  provider = "prisma-client"
  output = "../src/prisma/generated"
  moduleFormat = "esm"
  runtime = "nodejs"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

model Users {
  id          String  @id @unique @default(uuid())
  firstname   String
  lastname    String
  email       String
  bio         String?
}
